@model T03_CompetitionPlatform.Models.CompSubmissionViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js">
    </script>
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js">
    </script>
    <title>ViewCompetitorWork</title>
</head>


<body style="padding:70px;">
    <nav class="navbar navbar-expand-md bg-dark navbar-dark fixed-top">
        <!-- The brand(or icon) of the navbar -->
        <a class="navbar-brand"
           style="font-size:32px; font-weight:bold; color:darkorange;">
            CJP
        </a>
        <!-- Toggle/collapsible Button, also known as hamburger button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse"
                data-target="#guestNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Links in the navbar, displayed as drop-down list when collapsed -->
        <div class="collapse navbar-collapse" id="guestNavbar">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="~/Guest"
                       style="font-size: 20px;color: white;">
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Guest/ViewCompetitors/@Model.CompetitionID"
                       style="font-size: 20px;color: white;">
                        Go back
                    </a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">

                <li class="nav-item">
                    <a class="nav-link" href="~/Home/guestLogout"
                       style="font-size: 20px;color: white;">
                        Log Out
                    </a>
                </li>

            </ul>
        </div>
    </nav>
    <h3 style="text-align:center; padding-top:50px; padding-bottom:50px;">@Model.CompetitionName</h3>
    <div class="container">
        <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="card mx-auto w-50">
                @if (Model.FileSubmitted != null)
                {
                    <embed src="~/images/@Model.FileSubmitted" type="application/pdf" height="500px">
                }
                else
                {
                    <img src="~/images/missingfile.png" height="500px" width="100%">
                }
            <div class="card-body">
                <p class="card-text">Competitor name: @Model.Salutation @Model.CompetitorName</p>
                @if (Model.DateTimeFileUpload != null)
                {
                    <p class="card-text">Upload date: @Model.DateTimeFileUpload</p>
                }
                else
                {
                    <p class="card-text">Upload date: NIL</p>
                }
                @if (Model.FileSubmitted != null && Model.DateTimeFileUpload != null)
                {
            <input type="button" value="Vote" onclick="location.href='@Url.Action("ConfirmVote", "Guest")?=' + $('#Id_Of_Textbox').val()" />
                }

                else
                {
                <button type="button" class="btn btn-lg btn-block btn-success" disabled>Vote</button>
                }
</div>
            </div>
        </div>
    </div>
</body>
</html>