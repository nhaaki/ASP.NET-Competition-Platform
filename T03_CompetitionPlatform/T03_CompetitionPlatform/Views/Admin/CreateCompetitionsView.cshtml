@model T03_CompetitionPlatform.Models.Competition

@{
    ViewData["Title"] = "CreateCompetitionsView";
}

@{
    Layout = null;
}

<partial name="~/Views/Admin/_AdminNav.cshtml" />

<h1 style="text-align:center; margin-top:100px;">Create Competitions</h1>
<hr />
<p class="text-center" style="font-family: Arial;font-size: 150%;"><b><pre>@TempData["theResults"]</pre></b></p>
<hr />
<span style="color:red;">@TempData["StartDate>EndDate"]</span>
<span style="color:red;">@TempData["StartDate<EndDate"]</span>

<span style="color:red;">@TempData["ResultDate<StartDate"]</span>
<span style="color:red;">@TempData["ResultDate<EndDate"]</span>

<span style="color:red;">@TempData["EndDateMissing"]</span>

<span style="color:red;">@TempData["TodayDateError"]</span>

<span style="color:red;">@TempData["IDnull"]</span>

<span style="color:red;">@TempData["NameNull"]</span>

<span style="color:red;">@TempData["InputEmpty"]</span>

<span style="color:red;">@TempData["AreaIDFalse"]</span>

<span style="color:red;">@TempData["CompetitionNameExist"]</span>


<hr />

<hr />
<div class="row justify-content-center">
    <div class="col-md-auto justify-content-center">
        <form asp-action="CreateCompetition" style="text-align:center; align-content:center; align-items:center;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <label asp-for="AreaInterestID" class="control-label" style="text-align:center;"></label>
                <input asp-for="AreaInterestID" class="form-control" />

                <span asp-validation-for="AreaInterestID" class="text-danger"></span>

                <label asp-for="CompetitionName" class="control-label" style="text-align:center;"></label>
                <input asp-for="CompetitionName" class="form-control" size="270" maxlength="255" />

                <span asp-validation-for="CompetitionName" class="text-danger"></span>

                <label asp-for="StartDate" class="control-label" style="text-align:center;"></label>
                <input asp-for="StartDate" class="form-control" size="270" maxlength="255" />

                <span asp-validation-for="StartDate" class="text-danger"></span>

                <label asp-for="EndDate" class="control-label" style="text-align:center;"></label>
                <input asp-for="EndDate" class="form-control" size="270" maxlength="255" />

                <span asp-validation-for="EndDate" class="text-danger"></span>

                <label asp-for="ResultReleasedDate" class="control-label" style="text-align:center;"></label>
                <input asp-for="ResultReleasedDate" class="form-control" size="270" maxlength="255" />

                <span asp-validation-for="ResultReleasedDate" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

