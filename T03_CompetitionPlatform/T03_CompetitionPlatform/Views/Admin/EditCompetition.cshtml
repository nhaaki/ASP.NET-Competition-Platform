@model T03_CompetitionPlatform.Models.Competition

@{
    ViewData["Title"] = "EditCompetition";
}

@{
    Layout = null;
}

<partial name="~/Views/Admin/_AdminNav.cshtml" />

<h1>Edit Competition</h1>

<span style="color:red;">@TempData["StartDate>EndDate"]</span>
<span style="color:red;">@TempData["StartDate<EndDate"]</span>

<span style="color:red;">@TempData["ResultDate<StartDate"]</span>
<span style="color:red;">@TempData["ResultDate<EndDate"]</span>

<span style="color:red;">@TempData["EndDateMissing"]</span>

<span style="color:red;">@TempData["TodayDateError"]</span>

<span style="color:red;">@TempData["IDnull"]</span>

<span style="color:red;">@TempData["NameNull"]</span>

<span style="color:red;">@TempData["InputEmpty"]</span>

<span style="color:red;">@TempData["AreaIDFalse"]</span>

<span style="color:red;">@TempData["CompetitionNameExist"]</span>

<span style="color:red;">@TempData["NameMissing"]</span>

<hr />
<form asp-action="EditCompetition">
    <fieldset class="FormContent">
        <div class="form-group row">

            <label asp-for="CompetitionID"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="CompetitionID" readonly
                       class="form-control-plaintext" />
            </div>
        </div>
        <div class="form-group row">

            <label asp-for="AreaInterestID"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="AreaInterestID" readonly
                       class="form-control-plaintext" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="CompetitionName"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="CompetitionName" class="form-control" />
                <span asp-validation-for="CompetitionName"
                      class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="StartDate"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate"
                      class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="EndDate"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate"
                      class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ResultReleasedDate"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="ResultReleasedDate" class="form-control" />
                <span asp-validation-for="ResultReleasedDate"
                      class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Save"
                       class="btn btn-primary" />
            </div>
        </div>
    </fieldset>
</form>

