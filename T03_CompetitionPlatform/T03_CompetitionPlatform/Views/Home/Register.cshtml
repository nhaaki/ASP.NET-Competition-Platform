
@{
    ViewData["Title"] = "Register";
}

<head>
    <!-- Use Unicode character encoding - multi-language compatibity -->
    <meta charset="utf-8">
    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width = device-width,
 initial-scale = 1" />
    <title>CJP Login</title>

    <!-- offline
    <link rel="stylesheet" href="css/bootstrap.min.css">
    -->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js">
    </script>
    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js">
    </script>

    <!-- offline
       <script src="js/bootstrap.min.js"></script>
    -->
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js">
    </script>


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body style="padding:70px">
    <header>
        <!-- A grey navbar that expands horizontally at medium device -->
        <nav class="navbar navbar-expand-md bg-dark navbar-dark fixed-top">
            <!-- The brand(or icon) of the navbar -->
            <a class="navbar-brand"
               style="font-size:32px; font-weight:bold; color:darkorange;">
                CJP
            </a>
            <!-- Toggle/collapsible Button, also known as hamburger button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#staffNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Links in the navbar, displayed as drop-down list when collapsed -->
            <div class="collapse navbar-collapse" id="staffNavbar">
                <!-- Links that are aligned to the left,
                mr-auto: right margin auto-adjusted -->
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/Index"
                           style="font-size: 20px;color: white;">
                            Return
                        </a>
                    </li>

                </ul>
            </div>
        </nav>
    </header>




    <div class="row justify-content-md-center">
        <div class="col-md-auto">

            <p style="margin-top: 70px;
                font-family: Arial;
                font-size: 300%;
                text-align: center;">Register as:</p>

        </div>
    </div>

    <!-- Redirects to judge register -->
    <div class="col-md-auto">
        <a asp-action="JudgeRegister" asp-controller="Judge">
            <button type="submit"
                    style="min-width: 50%;
                    height: 200px;
                    font-size: 120%;
                    margin-top: 100px;
                    float:left;
                    border-color: #ff9800;
                    color: orange;
                    background-color: white;">
                Judge
            </button>
        </a>

        <!-- Redirects to competitor register -->
        <a asp-action="CompetitorRegister" asp-controller="Competitor">
            <button type="submit"
                    style="        min-width: 50%;
                height: 200px;
                font-size: 120%;
                float: left;
                margin-top: 100px;
                border-color: #2196F3;
                color: dodgerblue;
                background-color: white;">
                Competitor
            </button>
        </a>

    </div>
</body>


