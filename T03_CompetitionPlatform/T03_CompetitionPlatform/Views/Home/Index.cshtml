@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <!-- Use Unicode character encoding - multi-language compatibity -->
    <meta charset="utf-8">
    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width = device-width,
 initial-scale = 1" />
    <title>CJP Homepage</title>
    <!-- Reference to customized styling for this website -->
    <link rel="stylesheet" type="text/css" href="~/css/Site.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js">
    </script>
    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js">
    </script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js">
    </script>
</head>
<body>
    <div class="container" id="mainContainer">

        <div class="flex-container">

            <div class="button-container">
                <form method="post" action="~/Home/redirectLogin">

                    <input type="submit" id="btnRedirectLogin"
                           class="myLoginButton" value="Login" />

                </form>

                <form method="post" action="~/Home/redirectRegister">

                    <input type="submit" id="btnRedirectRegister"
                           class="myRegisterButton" value="Register" />

                </form>
            </div>

            <div class="textClass">
                
                <p>CJP</p>
            </div>


        </div>
    </div>
</body>
</html>